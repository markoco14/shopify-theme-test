  }

  .title-center {
    text-align: center;
  }

  .aqi-btn {
    text-align: center;
    border-radius: 25px;
    flex: 1 1 0;
    width: 0;
  }
  
  .good {
    border: 2px solid var(--good);
    color: var(--good);
  }
  
  .good-active {
    border: 2px solid var(--good);
    background-color: var(--good);
    color: white;
  }

  .good:hover {
    cursor: pointer;
  }

  .good-active:hover {
    cursor: pointer;
  }
  
  .moderate {
    border: 2px solid var(--moderate);
    color: var(--moderate);
  }

  .moderate-active {
    border: 2px solid var(--moderate);
    background-color: var(--moderate);
    color: white;
  }

  .moderate:hover {
    cursor: pointer;
  }

  .moderate-active:hover {
    cursor: pointer;
  }
  
  .sensitive {
    border: 2px solid var(--sensitive);
    color: var(--sensitive);
  }
  
  .sensitive-active {
    border: 2px solid var(--sensitive);
    background-color: var(--sensitive);
    color: white;
  }

  .sensitive:hover {
    cursor: pointer;
  }

  .sensitive-active:hover {
    cursor: pointer;
  }
  
  .unhealthy {
    border: 2px solid var(--unhealthy);
    color: var(--unhealthy);
  }
  
  .unhealthy-active {
    border: 2px solid var(--unhealthy);
    background-color: var(--unhealthy);
    color: white;
  }

  .unhealthy:hover {
    cursor: pointer;
  }

  .unhealthy-active:hover {
    cursor: pointer;
  }
  
  .very-unhealthy {
    border: 2px solid var(--very-unhealthy);
    color: var(--very-unhealthy);
  }
  
  .very-unhealthy-active {
    border: 2px solid var(--very-unhealthy);
    background-color: var(--very-unhealthy);
    color: white;
  }

  .very-unhealthy:hover {
    cursor: pointer;
  }

  .very-unhealthy-active:hover {
    cursor: pointer;
  }
  
  .hazardous {
    border: 2px solid var(--hazardous);
    color: var(--hazardous);
  }

  .hazardous-active {
    border: 2px solid var(--hazardous);
    background-color: var(--hazardous);
    color: white;
  }

  .hazardous:hover {
    cursor: pointer;
  }

  .hazardous-active:hover {
    cursor: pointer;
  }

  .aqi-description-content {
    width: 50%;
    padding: 0 8rem;
    display: flex;
    flex-direction: column;
    justify-content: center;
    text-align: center;
  }

  .aqi-level-text {
    font-size:2em;
    font-weight: 550;
  }

  .aqi-image {
    width: 50%;
  }
  
{% endstylesheet %}

{% javascript %}

  const inactiveClasses = [
    ["aqi-btn", "good"], 
    ["aqi-btn", "moderate"], 
    ["aqi-btn", "sensitive"], 
    ["aqi-btn", "unhealthy"],
    ["aqi-btn", "very-unhealthy"],
    ["aqi-btn", "hazardous"]
  ];
  const activeClasses = [
    ["aqi-btn", "good-active"], 
    ["aqi-btn", "moderate-active"], 
    ["aqi-btn", "sensitive-active"], 
    ["aqi-btn", "unhealthy-active"],
    ["aqi-btn", "very-unhealthy-active"],
    ["aqi-btn", "hazardous-active"]
  ];
  const aqiButtons = document.querySelectorAll('.aqi-btn');
  const aqiDescriptions = document.querySelectorAll('.aqi-description');
  
  aqiButtons.forEach((btn, index) => {
    btn.addEventListener('mouseover', () => {
      aqiButtons.forEach((btn, btnIndex) => {
        if (btnIndex === index) {
          console.log(btn);
          btn.classList.remove(...btn.classList);
          activeClasses[btnIndex].forEach(className => {
            btn.classList.add(className);
          });
        } else {
          btn.classList.remove(...btn.classList);
          inactiveClasses[btnIndex].forEach(className => {
            btn.classList.add(className);
          });
        }
      });

      aqiDescriptions.forEach(description => {
        description.classList.remove('show');
        description.classList.add('hide');
      });
      aqiDescriptions[index].classList.remove('hide');
      aqiDescriptions[index].classList.add('show');
    });
  });
{% endjavascript %}