{% stylesheet %}
  .hide {
    display: none;
  }

  .show {
    display: flex;
  }

  .title-center {
    text-align: center;
  }
  .btn-text {
    text-align: center;
    margin: 0 auto;
  }
  
  .good {
    border: 2px solid #33c9d3;
    border-radius: 25px;
    flex: 1 1 0;
    width: 0;
  }

  .good:hover {
    background-color: #33c9d3;
  }
  
  .moderate {
    border: 2px solid #f8d766;
    border-radius: 25px;
    flex: 1 1 0;
    width: 0;
  }

  .moderate:hover {
    background-color: #f8d766;
  }
  
  .unhealthy-sensitive {
    border: 2px solid #f0b86a;
    border-radius: 25px;
    flex: 1 1 0;
    width: 0;
  }

  unhealthy-sensitive:hover {
    background-color: #f0b86a;
  }
  
  .unhealthy {
    border: 2px solid #f08589;
    border-radius: 25px;
    flex: 1 1 0;
    width: 0;
  }

  .unhealthy:hover {
    background-color: #f08589;  
  }
  
  .very-unhealthy {
    border: 2px solid #9636af;
    border-radius: 25px;
    flex: 1 1 0;
    width: 0;
  }

  .very-unhealthy:hover {
    background-color: #9636af;
  }
  
  .hazardous {
    border: 2px solid #7e6ae2;
    border-radius: 25px;
    flex: 1 1 0;
    width: 0;
  }

  .hazardous:hover {
    background-color: #7e6ae2;
  }

  .aqi-description {
    width: 50%;
    padding: 0 8rem;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  .aqi-image {
    width: 50%;
  }
  
{% endstylesheet %}

