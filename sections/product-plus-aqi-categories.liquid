{% stylesheet %}
  .hide {
    display: none;
  }

  .show {
    display: list-item;
  }

  .title-center {
    text-align: center;
  }
  .btn-text {
    text-align: center;
    margin: 0 auto;
  }
  .good {
    border: 2px solid #33c9d3;
    border-radius: 25px;
    flex: 1 1 0;
    width: 0;
  }

  .good::hover {
    background-color: #33c9d3;
  }

  .good::active {
    background-color: #77DCE3;
  }
  
  .moderate {
    border: 2px solid #f8d766;
    border-radius: 25px;
    flex: 1 1 0;
    width: 0;
  }
  .unhealthy-sensitive {
    border: 2px solid #f0b86a;
    border-radius: 25px;
    flex: 1 1 0;
    width: 0;
  }
  .unhealthy {
    border: 2px solid #f08589;
    border-radius: 25px;
    flex: 1 1 0;
    width: 0;
  }
  .very-unhealthy {
    border: 2px solid #9636af;
    border-radius: 25px;
    flex: 1 1 0;
    width: 0;
  }
  .hazardous {
    border: 2px solid #7e6ae2;
