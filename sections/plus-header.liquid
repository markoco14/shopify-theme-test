{% stylesheet %}
  .flex {
    display: flex;
  }

  .header-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: min(1400px, 90%); 
    margin: auto; 
  }

  .header-container > span > a {
    color: #33c9d3;
    text-decoration: none;
    font-size:2.5em;
    font-weight:400;
  }

  .logo {
    color: #33c9d3;
    text-align: left;
  }

  .primary-navigation {
    list-style: none;
  }

  .primary-navigation > li > a {
    color: black;
    text-decoration: none;
  }

  .primary-navigation > li > a:hover {
    color: #33c9d3;
  } 
{% endstylesheet %}