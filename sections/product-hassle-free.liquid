<div class="hassle-container-full">
  <div class="hassle-container">
    <h2 class="heading-center">Hassle Free Ordering</h2>
    <div class="hassle-flex">
      <div class="hassle-item">
        <img 
          src="https://cdn.shopify.com/s/files/1/0622/1715/8830/files/WYND-free-shipping.png?v=1661409753"
          alt="Icon of truck driving fast to deliver products"
        /> 
        <p>Free & Fast Shipping on all orders</p>
      </div>
      <div class="hassle-item">
        <img 
          src="https://cdn.shopify.com/s/files/1/0622/1715/8830/files/WYND-refundable.png?v=1661409989"
          alt="Icon of truck driving fast to deliver products"
        /> 
        <p>100-day returns or exchanges</p>
      </div>
      <div class="hassle-item">
        <img 
          src="https://cdn.shopify.com/s/files/1/0622/1715/8830/files/WYND-guarantee.png?v=1661410093"
          alt="Icon of truck driving fast to deliver products"
        /> 
        <p>Full refund if not completely satisfied</p>
      </div>
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "Hassle Free",
    "settings": []
  }
{% endschema %}

{% stylesheet %}

  .hassle-container-full {
    background-color: #f5f5f5;
    padding: 2rem 0;
  }

  .hassle-container {
    width: min(800px, 90%);
    margin: auto;
  }

  .heading-center {
    text-align: center;
  }

  .hassle-flex {
    display:flex;
    justify-content: space-between;
  }

  .hassle-item {
    text-align: center;
    max-width: 250px;
  }
{% endstylesheet %}